CREATE OR REPLACE VIEW `t1engenhariadados.LivrariaDevSaber_t3_15.v_relatorio_vendas_detalhado` AS
SELECT
    V.ID_Venda,
    V.Data_Venda,
    C.Nome_Cliente,
    C.Estado_Cliente,
    P.Nome_Produto,
    P.Categoria_Produto,
    V.Quantidade,
    P.Preco_Produto,
    (V.Quantidade * P.Preco_Produto) AS Valor_Total
FROM `t1engenhariadados.LivrariaDevSaber_t3_15.Vendas` AS V
JOIN `t1engenhariadados.LivrariaDevSaber_t3_15.Clientes` AS C ON V.ID_Cliente = C.ID_Cliente
JOIN `t1engenhariadados.LivrariaDevSaber_t3_15.Produtos` AS P ON V.ID_Produto = P.ID_Produto;

SELECT * FROM `t1engenhariadados.LivrariaDevSaber_t3_15.v_relatorio_vendas_detalhado` WHERE Nome_Cliente = 'Ana Silva';

SELECT * FROM `t1engenhariadados.LivrariaDevSaber_t3_15.v_relatorio_vendas_detalhado` WHERE Estado_Cliente = 'RJ';